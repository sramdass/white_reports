<tr class = "tfields">	
	<td><%= f.text_field :name, :size => 15 %></td>	
	<!-- Get the teachers list here. If the '@teachers' is assigned in secnew in controller,
			 there will be problems when the seccreate get an error (from validations) and 
			 renders the secnew. In this case '@teachers' will be blank.		
	-->	
	<% teachers = @clazz.branch.teachers %> 
	<td><%= f.select :class_teacher_id, options_for_select(teachers.collect {|t| [ t.name, t.id ] } , f.object.class_teacher_id) , {:prompt => "Class teacher"}  %></td>
 	<td class='remove-button'><%= link_to_remove_fields "X", f %></td>
</tr>
 
 
	