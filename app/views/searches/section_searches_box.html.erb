<div id="nav-column">
	<strong> SECTION SEARCH</strong>
	<ul class='nav-list'>
		<li><a id = 'search_students' <% if default_tab?('students') %> class = 'selected' <% end %> href="#">Students</a></li>				
		<li><a id = 'search_marks' <% if default_tab?('marks') %> class = 'selected' <% end %> href="#">Marks</a></li>
		<li><a id = 'search_others'  <% if default_tab?('tests') %> class = 'selected' <% end %>  href="#">Others</a></li>
	</ul>
</div>	

<div id="main-column">	
	<%= render 'shared/breadcrumbs', :type => "search", :target => @section %>		
	<div id='search_students' class='cantoggle'>	
		<%= render 'section_search_students', :section => @section %>
	</div> 	
	<div id='search_marks' class='cantoggle'>
		<%= render 'section_search_marks', :section => @section %>
	</div> 			
	<div id='search_others' class='cantoggle'>
		<strong> A clever search will go here. As soon as I think of one! <strong>
	</div> 		
	<div id="fav-bar">
		<ul>
			<li class='first'>  <%= link_to "My Home", root_url  %> </li>
			<li> <%= link_to "Back to " + @section.name, section_path(@section) %> </li>						
			<li> <%= link_to @section.clazz.name, branch_path(@section.clazz) %> </li>			
			<li> <%= link_to @section.clazz.branch.name, branch_path(@section.clazz.branch) %> </li>
		</ul>	
	</div>					
</div>
